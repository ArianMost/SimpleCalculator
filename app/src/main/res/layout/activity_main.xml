<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arian.simplecalculator.MainActivity"
    android:padding="10dp"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.41"
            android:background="#000000"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_history"
                android:gravity="bottom|right"
                android:textSize="22dp"
                android:height="60dp"
                android:background="#000000"
                android:textColor="#74eb38"
                android:nestedScrollingEnabled="true"
                android:layout_weight="0.66"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:text="0"
                android:id="@+id/txt_result"
                android:textSize="45dp"
                android:textColor="#de6b0d"
                android:gravity="bottom|right"
                android:height="100dp"
                android:background="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#000000">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CE"
                android:id="@+id/btn_clearEntity"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="25dp"
                android:background="#3b0001"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/btn_clear"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="25dp"
                android:background="#3b0001"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="«"
                android:id="@+id/btn_back"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="30dp"
                android:background="#000332"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/btn_division"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="30dp"
                android:background="#252222"
                android:layout_margin="1dp"
                android:tag="/"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#000000">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/btn_7"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="7"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/btn_8"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="8"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/btn_9"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="9"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x"
                android:id="@+id/btn_X"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="24dp"
                android:background="#252222"
                android:layout_margin="1dp"
                android:tag="x"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#000000">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btn_4"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/btn_5"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="5"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/btn_6"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="6"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/btn_minus"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="30dp"
                android:background="#252222"
                android:layout_margin="1dp"
                android:tag="-"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#000000">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn_1"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:nestedScrollingEnabled="false"
                android:tag="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/btn_2"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btn_3"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/btn_add"
                android:layout_weight="0.25"
                android:textColor="#ababab"
                android:textSize="30dp"
                android:background="#252222"
                android:layout_margin="1dp"
                android:tag="+"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#000000">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="±"
                android:id="@+id/btn_sign"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/btn_0"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"
                android:tag="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/btn_point"
                android:layout_weight="0.25"
                android:textColor="#c8c7c7"
                android:textSize="27dp"
                android:background="#3b3939"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/btn_equal"
                android:layout_weight="0.25"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:background="#9eec8d"
                android:layout_margin="1dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
